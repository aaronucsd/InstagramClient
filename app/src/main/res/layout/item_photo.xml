<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:paddingTop="15dp" android:layout_height="match_parent">



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibProfileImage"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_toRightOf="@+id/ibProfileImage"
        android:textStyle="normal"
        android:id="@+id/stUsername"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:textColor="#ff5705ff" />


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:minHeight="50dp"
        android:layout_below="@+id/ibProfileImage"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/hearticon"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textStyle="normal"
        android:id="@+id/stLikes"

        android:layout_marginLeft="35dp"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignRight="@+id/ivPhoto"
        android:layout_alignParentLeft="true"
        android:textColor="#ff5705ff"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCaption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/stLikes"
        android:paddingLeft="10dp"
        />




</RelativeLayout>